{
  "languages": {
    "JSONC": {
      "formatter": {
        "external": {
          "command": "/usr/local/bin/dprint",
          "arguments": ["fmt", "--stdin", "{buffer_path}"]
        }
      }
    },
    "JavaScript": {
      "language_servers": [
        "deno",
        "!typescript-language-server",
        "!vtsls",
        "!eslint"
      ],
      "formatter": "language_server"
    },
    "TypeScript": {
      "language_servers": [
        "deno",
        "!typescript-language-server",
        "!vtsls",
        "!eslint"
      ],
      "formatter": {
        "external": {
          "command": "/usr/local/bin/dprint",
          "arguments": ["fmt", "--stdin", "{buffer_path}"]
        }
      }
    },
    "TSX": {
      "language_servers": [
        "deno",
        "!typescript-language-server",
